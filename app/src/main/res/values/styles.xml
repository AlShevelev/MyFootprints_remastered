<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for dialogs on Main screen -->
    <style name="App.Activity.Main.Dialog.Theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>  <!--Buttons-->
        <item name="android:textColorPrimary">@color/black</item> <!--Text-->
    </style>

    <!-- Title screen -->
    <style name="TitleScreen.Button" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">@color/title_button</item>
        <item name="android:textColor">@color/title_button</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TitleScreen.TotalLabel" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bcg_title_total_footprints</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <!-- Create footprint screen -->
    <style name="CreateFootprint.Photo.Button" parent="TitleScreen.Button">
        <item name="android:background">@color/white75</item>
    </style>

    <!-- Edit photo screen -->
    <style name="EditPhoto.Filter.Button" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/select_filter_button</item>
        <item name="android:drawableTint">@color/select_filter_button</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textSizeSmall</item>
    </style>

    <!-- Gallery grid -->
    <style name="Gallery.GridLabel" parent="TitleScreen.TotalLabel">
        <item name="android:textSize">@dimen/textSizeSmall</item>
        <item name="android:padding">4dp</item>
    </style>

    <!-- Gallery page-->
    <style name="Gallery.Page" parent="TitleScreen.TotalLabel">
        <item name="android:background">@drawable/bcg_gallery_page_text</item>
        <item name="android:textColor">@color/white75</item>
    </style>

    <!-- Common buttons -->
    <style name="Button.Blue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/toolButtonSize</item>
        <item name="android:background">@drawable/bcg_blue_button</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Tool" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/toolButtonSize</item>
        <item name="android:layout_height">@dimen/toolButtonSize</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/tool_button</item>
    </style>

    <style name="Button.OnPhoto" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/onPhotoButtonSize</item>
        <item name="android:layout_height">@dimen/onPhotoButtonSize</item>
        <item name="android:background">@drawable/bcg_on_photo_button</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Button.OnPhoto.Light" parent="Button.OnPhoto">
        <item name="android:background">@drawable/bcg_on_photo_button_dark</item>
        <item name="android:tint">@color/white75</item>
    </style>

    <!-- Dialogs -->
    <style name="BottomSheetDialogFragment.RoundCorners" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Text styles -->
    <style name="Common.Base.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Common.Base.TextStyle.Single.Line" parent="Common.Base.TextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Common.Base.TextStyle.Multi.Lines" parent="Common.Base.TextStyle">
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="Text.SizeNormal.Normal.Black" parent="Common.Base.TextStyle.Single.Line">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="Text.SizeLarge.Normal.Black" parent="Common.Base.TextStyle.Single.Line">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Text.SizeLarge.Normal.Black.Multi" parent="Common.Base.TextStyle.Multi.Lines">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>

    <style name="Text.Link" parent="Text.SizeLarge.Normal.Black">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>