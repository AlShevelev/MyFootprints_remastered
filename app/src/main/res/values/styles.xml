<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Title screen -->
    <style name="TitleScreen.Button" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:drawableTint">@color/title_button</item>
        <item name="android:textColor">@color/title_button</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TitleScreen.TotalLabel" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bcg_title_total_footprints</item>
        <item name="android:padding">6dp</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Create footprint screen -->
    <style name="CreateFootprint.Photo.Button" parent="TitleScreen.Button">
        <item name="android:background">@color/white75</item>
    </style>

    <!-- Common buttons -->
    <style name="Button.Blue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/toolButtonSize</item>
        <item name="android:background">@drawable/bcg_blue_button</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button.Tool" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/toolButtonSize</item>
        <item name="android:layout_height">@dimen/toolButtonSize</item>
        <item name="android:background">@null</item>
        <item name="android:tint">@color/tool_button</item>
    </style>

    <!-- Text styles -->
    <style name="Common.Base.TextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Common.Base.TextStyle.Single.Line" parent="Common.Base.TextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text.SizeNormal.Normal.Black" parent="Common.Base.TextStyle.Single.Line">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="Text.SizeLarge.Normal.Black" parent="Common.Base.TextStyle.Single.Line">
        <item name="android:textSize">@dimen/textSizeLarge</item>
    </style>
</resources>