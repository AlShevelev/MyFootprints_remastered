<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/resultImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="centerCrop"

        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/brightnessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brightness"

        app:layout_constraintBottom_toTopOf="@+id/contrastButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/contrastButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contrast"
        app:layout_constraintBottom_toTopOf="@+id/saturationButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brightnessButton"
        tools:ignore="HardcodedText" />


    <Button
        android:id="@+id/saturationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saturation"
        app:layout_constraintBottom_toTopOf="@+id/whiteBalanceButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrastButton"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/whiteBalanceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="White balance"

        app:layout_constraintBottom_toTopOf="@+id/combinedButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saturationButton"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/combinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Combined"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whiteBalanceButton"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>